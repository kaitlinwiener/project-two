<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Averia+Sans+Libre:400,300italic' rel='stylesheet' type='text/css'>
    <title></title>
  </head>
  <body>
  <nav>
   <img class="logo" src="http://www.smashingmagazine.com/images/3d-illustrator-tutorials/3dlogo.jpg">
   <ul class="right-nav">
     <li><a href="/">Home</a></li>
     <l1><a href = "/articles/?category=1">Category 1 Articles</a></li>
     <l1><a href = "/articles/?category=2">Category 2 Articles</a></li>
     <l1><a href = "/articles/?category=3">Category 3 Articles</a></li>
     <% if (currentUser) { %>
       <li><a href="/articles/new">Create an article</a></li>
       <li><form class = "logout" action="/session/?_method=DELETE"
          method="post">
          <input id = "delete" type="submit" value="Log Out">
        </form></li>
     <% } else { %>
       <li><a href="/login">Log in / Sign Up</a></li>
     <% } %>
   </ul>
</nav>
    <h1>All Articles</h1>
      <% articles.forEach(function (article, i) { %>
      <div class = "article">
      <h3><%= article.title %></h3>
      <h4>By: <a class = "authorname" href = "/articles/?username=<%=article.author%> "><%=article.author%></a></h4>
      <h5><%= article.body %></h5>
      <p>Last edited on <%= article.date %></p>
      <p>Tag: <%= article.category %></p>
      <% if (currentUser) { %>
      <button class = "edit"><a class = "editlink" href = "/articles/<%= article._id %>/edit">Edit</a></button>
      <form action="/articles/<%= article._id %>/edit" method="post">
        <input type="text" name="comment"/>
        <input class="submit" type="submit" class="btn btn-primary" value = "Comment"/>
      </form>
       <% } %>
       <h5>Comments</h5>
       <% article.comments.forEach(function (comment, i) { %>
           <p><%= comment.author %>: <%= comment.body %> on <%= comment.date %></p>
         <% }) %>
       </div>
        <% }) %>
      </div>
  </body>
</html>
