
   <h3> Featured Article </h3>
   <div class="card">
     <div class="card-content">
      <% if (articles.length >0) { %>
      <% chosen = (Math.floor(Math.random()*articles.length)) %>
      <span class="card-title activator grey-text text-darken-4"><%= articles[chosen].title %>. Originally by: <a class="authorname" href="/articles/?username=<%=articles[chosen].author[0]%> "><%=articles[chosen].author[0]%></a></span>
      <h6 class="lastedited">Last edited on <%= articles[chosen].date[articles[chosen].date.length-1] %> by <%= articles[chosen].author[articles[chosen].author.length-1] %></h6>
      <div class="body"><%= articles[chosen].body[articles[chosen].body.length-1] %></div>
      <% } %>
    </div>
  </div>
