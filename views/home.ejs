<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>home</title>
  </head>
  <body>
    <nav>
 <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Wikipedia-logo-en-big.png">
 <ul class="right-nav">
   <li><a href="/articles">View Articles</a></li>
   <% if (currentUser) { %>
     <li><a href="/articles/new">Create an article</a></li>
     <form action="/session/?_method=DELETE"
        method="post">
        <input id = "delete" type="submit" value="Log Out">
      </form>
   <% } else { %>
     <li><a href="/home">Log in / Sign Up</a></li>
   <% } %>
 </ul>
</nav>
<h1>All Articles</h1>
  <% articles.forEach(function (article, i) { %>
  <div class = "article">
  <h3><%= article.title %></h3>
  <h4>By <%= article.author




     %></h4>
  <h5>$<%= article.body %></h5>
  <p>Last edited on <%= article.date %></p>
    <% }) %>
  </body>
</html>
