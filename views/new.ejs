<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>Create a New Article</title>
  </head>
  <body>
    <a href = "/">Back</a>
    <form action="/articles" method="post">
      <label for="articletitle">Title</label>
      <input id="articletitle"
             type="text"
             name="article[title]"/>
      <br>
      <% console.log(Date.now()) %>
      <label for="articlebody">Article Body</label>
      <br>
      <textarea id="articlebody"
             rows = "10"
             cols = "30"
             name="article[body]"></textarea>
             <br>
      <select name="article[category]">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
    </select>

    <br><br>
      <input class="submit" type="submit" class="btn btn-primary"/>
    </form>
  </body>
</html>
